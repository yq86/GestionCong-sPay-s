version: "3.8"

services:
  db:
    image: mariadb:latest
    restart: always
    environment:
      MYSQL_ROOT_USER: root
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: holidayManagement
    ports:
      - '3306:3306'
    volumes:
      - holidayManagement:/var/lib/mysql
  adminer:
    image: adminer
    depends_on: 
      - db
  api:
    build: ./back
    env_file:
      - ./back/.env
    ports:
      - '9090:9090'
    environment:
      DB_URL: mariadb://db/holidayManagement
  web:
    build: ./front
    ports:
      - '4200:4200'
      
volumes:
  holidayManagement:
    
